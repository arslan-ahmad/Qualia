<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="eu.qoenet_itn.www.qualia.DetailActivityFragment"
    tools:showIn="@layout/activity_detail">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:weightSum="5">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Profile"
            android:id="@+id/userprofilebutton"
            android:layout_weight="0.5"
            android:background="#09c"

            />


        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Context"
            android:id="@+id/contextbutton"
            android:layout_weight="0.5"
            android:background="#690"/>
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resource and System"
            android:id="@+id/resourcebutton"
            android:layout_weight="0.5"
            android:background="#93c" />
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Application"
            android:id="@+id/applicationbutton"
            android:layout_weight="0.5"
            android:background="#f80"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Network"
            android:id="@+id/networkbutton"
            android:background="#c00"
            android:layout_weight="0.5"/>
    </LinearLayout>


</RelativeLayout>
